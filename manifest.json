{
  "manifest_version": 3,
  "name": "Azure DevOps Wiki â€” TOAST UI (Markdown)",
  "version": "1.0.0",
  "description": "Markdown-only TOAST UI Editor for Azure DevOps Wiki with diagrams, color/font tags, paste fidelity, image uploads, and exports.",
  "permissions": ["storage"],
  "host_permissions": [
  "https://dev.azure.com/*",
  "https://*.visualstudio.com/*"
  ],
  "content_scripts": [
  {
  "matches": [
  "https://dev.azure.com/*/*/_wiki/*",
  "https://*.visualstudio.com/*/_wiki/*"
  ],
  "js": ["content.js"],
  "run_at": "document_idle"
  }
  ],
  "options_ui": {
  "page": "options.html",
  "open_in_tab": true
  }
}